<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>MOD_SAPERU_LINKS</name>
	<author>Sape.ru</author>
	<creationDate>2017</creationDate>
	<copyright>Copyright</copyright>
	<license>GNU</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>0.0.1</version>
	<description>MOD_SAPERU_LINKS_DESC</description>
	<files>
		<filename module="mod_saperu_links">mod_saperu_links.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.mod_saperu_links.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_saperu_links.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_saperu_links.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_saperu_links.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="count"
						type="text"
						label="MOD_SAPERU_LINKS_FIELD_COUNT_LABEL"
						description="MOD_SAPERU_LINKS_FIELD_COUNT_DESC"
						default="3"/>

				<field
						name="block"
						type="list"
						label="MOD_SAPERU_LINKS_FIELD_BLOCK_LABEL"
						description="MOD_SAPERU_LINKS_FIELD_BLOCK_DESC"
						default="0">
					<option value="0">MOD_SAPERU_LINKS_FIELD_BLOCK_0</option>
					<option value="1">MOD_SAPERU_LINKS_FIELD_BLOCK_1</option>
				</field>

				<field
						name="orientation"
						type="list"
						label="MOD_SAPERU_LINKS_FIELD_ORIENTATION_LABEL"
						description="MOD_SAPERU_LINKS_FIELD_ORIENTATION_DESC"
						default="0">
					<option value="0">MOD_SAPERU_LINKS_FIELD_ORIENTATION_0</option>
					<option value="1">MOD_SAPERU_LINKS_FIELD_ORIENTATION_1</option>
				</field>

				<field
						name="content"
						type="textarea"
						label="MOD_SAPERU_LINKS_FIELD_CONTENT_LABEL"
						description="MOD_SAPERU_LINKS_FIELD_CONTENT_DESC"
						rows="3" filter="raw"/>
			</fieldset>
		</fields>
	</config>
</extension>